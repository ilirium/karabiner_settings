{
  "title": "Switch to specific input sources",
  "rules": [
    {
      "description": "Use dedicated keys for each input source (language)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "print_screen",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "select_input_source": {
                "language": "^en$"
              }
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "scroll_lock",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "select_input_source": {
                "language": "^ru$"
              }
            }
          ]
        }
      ]
    }
  ]
}